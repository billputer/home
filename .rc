########################################################################
# paths
########################################################################

[ -d /usr/local/sbin ]  && export PATH=/usr/local/sbin:"${PATH}"
[ -d /usr/local/bin ]   && export PATH=/usr/local/bin:"${PATH}"
[ -d ~/.local/bin ]     && export PATH=~/.local/bin:"${PATH}"
[ -d ~/bin ]            && export PATH=~/bin:"${PATH}"
[ -d ~/.bin ]           && export PATH=~/.bin:"${PATH}"

cdpath=(. ~/work ~/scratch)


########################################################################
# environment
########################################################################

export LC_ALL="en_US.UTF-8"
export TZ="America/Los_Angeles"
export CLICOLOR=1
export PAGER='less'
export LESS='CMifSR'
export LESSCHARSET='utf-8'
export EDITOR=vim
export GIT_PAGER=$PAGER


########################################################################
# history
########################################################################

export HISTFILE=~/.history
export HISTFILESIZE=50000000
export HISTSIZE=5000000
export SAVEHIST=$HISTSIZE
export HISTIGNORE='l:ls:la:ll:cd:w'
export HISTTIMEFORMAT='%Y-%m-%d %H:%M:%S - '
export HISTCONTROL=ignoredups:ignorespace


########################################################################
# sources
########################################################################

# aliases
[ -f ~/.aliases ] && source ~/.aliases

# misc (if they exist)
command -v git-helpers.sh >/dev/null 2>&1 && source git-helpers.sh
command -v work.sh        >/dev/null 2>&1 && source work.sh
command -v local.sh       >/dev/null 2>&1 && source local.sh


########################################################################
# Python
########################################################################

export PYTHONDONTWRITEBYTECODE=1
[ command -v virtualenvwrapper.sh >/dev/null 2>&1 ] && source virtualenvwrapper.sh
[ -d /usr/local/lib/python2.7/site-packages ] && export PYTHONPATH=/usr/local/lib/python2.7/site-packages:$PYTHONPATH


########################################################################
# Perl
########################################################################

export PERL5LIB=$HOME/.local/lib/perl5:$PERL5LIB
export PERLBREW_ROOT=/opt/perl
[ -e /opt/perl/etc/bashrc ] && source /opt/perl/etc/bashrc


########################################################################
# SSH
########################################################################

umask 002
if [ -d ~/.ssh ]; then
    chmod 700 ~/.ssh 2> /dev/null
    chmod 600 ~/.ssh/* 2> /dev/null
fi
